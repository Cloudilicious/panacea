<p id="notice"><%= notice %></p>



<% unless @pharmacy.avatar_url.nil? %>
  <%= image_tag @pharmacy.avatar_url(:display) %><br />
  <% end %>

<p>
  <strong>Name:</strong>
  <%= @pharmacy.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @pharmacy.address %>
</p>

<p>
  <strong>Suburb:</strong>
  <%= @pharmacy.suburb.name %>
</p>

<div>
  <%= render partial: 'map_embed', locals: {lat: @pharmacy.lat, lng: @pharmacy.lng } %>
</div>

<%= link_to 'Edit', edit_pharmacy_path(@pharmacy) %> |
