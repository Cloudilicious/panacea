<p id="notice"><%= notice %></p>

<h1>Pharmacies</h1>

<table>
  <thead>
    <tr>
      <th>Pharmacy</th>
      <th>Name</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Logo url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pharmacies.each do |pharmacy| %>
      <tr>
        <td><%= pharmacy.pharmacy_id %></td>
        <td><%= pharmacy.name %></td>
        <td><%= pharmacy.address %></td>
        <td><%= pharmacy.suburb %></td>
        <td><%= pharmacy.lat %></td>
        <td><%= pharmacy.lng %></td>
        <td><%= pharmacy.logo_url %></td>
        <td><%= link_to 'Show', pharmacy %></td>
        <td><%= link_to 'Edit', edit_pharmacy_path(pharmacy) %></td>
        <td><%= link_to 'Destroy', pharmacy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pharmacy', new_pharmacy_path %>
